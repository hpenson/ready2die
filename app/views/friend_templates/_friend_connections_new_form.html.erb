<form action="/create_connection_from_friend" method="post">

  <div class="form-group">
    <label for="why">
      Why
    </label>

    <input type="text" id="why" name="why" class="form-control" value="<%= @connection.why %>">
  </div>

  <input type="hidden" name="afriend_id" value="<%= @friend.id %>">

  <div class="form-group">
    <label for="bfriend_id">
      Bfriend
    </label>

    <input type="text" id="bfriend_id" name="bfriend_id" class="form-control" value="<%= @connection.bfriend_id %>">
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create connection
  </button>
</form>
