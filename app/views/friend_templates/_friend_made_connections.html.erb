<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Made Connections

    <a data-toggle="collapse" href="#friend_made_connections_new_form">
      Add connection
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @friend.made_connections.each do |connection| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/connections/<%= connection.id %>">
          <%= connection.created_at %>
        </a>

        <a href="/delete_connection_from_bfriend/<%= connection.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="friend_made_connections_new_form">
        <%= render partial: "friend_templates/friend_made_connections_new_form" %>
      </div>
    </div>

  </ul>
</div>
