<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Connections

    <a data-toggle="collapse" href="#friend_connections_new_form">
      Add connection
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @friend.connections.each do |connection| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/connections/<%= connection.id %>">
          <%= connection.created_at %>
        </a>

        <%if current_user == connection.user %>
          <a href="/delete_connection_from_friend/<%= connection.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="friend_connections_new_form">
        <%= render partial: "friend_templates/friend_connections_new_form" %>
      </div>
    </div>

  </ul>
</div>
