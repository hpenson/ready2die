  </div>
  <!-- Label and input for phone end -->

  <!-- Label and input for discretion_id start -->
  <div class="form-group">
    <label for="discretion_id">
      Discretion
    </label>

    <!-- Input for discretion_id start -->
    <input type="text" id="discretion_id" name="discretion_id" class="form-control">
    <!-- Input for discretion_id end -->
  </div>
  <!-- Label and input for discretion_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create appointee
  </button>
