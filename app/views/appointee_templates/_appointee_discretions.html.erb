<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Discretions

    <a data-toggle="collapse" href="#appointee_discretions_new_form">
      Add discretion
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @appointee.discretions.each do |discretion| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/discretions/<%= discretion.id %>">
          <%= discretion.title %>
        </a>

        <%if current_user == discretion.user %>
          <a href="/delete_discretion_from_appointee/<%= discretion.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="appointee_discretions_new_form">
        <%= render partial: "appointee_templates/appointee_discretions_new_form" %>
      </div>
    </div>

  </ul>
</div>
