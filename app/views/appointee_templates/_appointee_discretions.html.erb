<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Discretions

    <a data-toggle="collapse" href="#appointee_discretions_new_form">
      Add discretion
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @appointee.discretions.each do |discretion| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/discretions/<%= discretion.id %>">
          <%= discretion.title %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_discretion_from_apppointee/<%= discretion.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="appointee_discretions_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "appointee_templates/appointee_discretions_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
