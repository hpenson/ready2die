<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All appointees
    </h1>

    <a href="/appointees/new" class="btn btn-block btn-outline-secondary">
      Add a new appointee
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "appointee_templates/appointees_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "appointee_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Last name
        </th>

        <th>
          First name
        </th>

        <th>
          Email
        </th>

        <th>
          Address
        </th>

        <th>
          Phone
        </th>

        <th>
          Discretion
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @appointees.each do |appointee| %>
      <tr>
        <td>
          <%= appointee.id %>
        </td>

        <td>
          <%= appointee.last_name %>
        </td>

        <td>
          <%= appointee.first_name %>
        </td>

        <td>
          <%= appointee.email %>
        </td>

        <td>
          <%= appointee.address %>
        </td>

        <td>
          <%= appointee.phone %>
        </td>

        <td>
          <%= appointee.discretion_id %>
        </td>

        <td>
          <%= time_ago_in_words(appointee.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(appointee.updated_at) %> ago
        </td>

        <td>
          <a href="/appointees/<%= appointee.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @appointees, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
