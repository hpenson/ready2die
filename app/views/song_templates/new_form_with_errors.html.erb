<% if @song.present? %>
  <% if @song.errors.any? %>
    <% @song.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new song
</h1>


<hr>

<form action="/create_song" method="post">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @song.title %>">
  </div>

  <div class="form-group">
    <label for="artist">
      Artist
    </label>

    <input type="text" id="artist" name="artist" class="form-control" value="<%= @song.artist %>">
  </div>

  <div class="form-group">
    <label for="rank">
      Rank
    </label>

    <input type="text" id="rank" name="rank" class="form-control" value="<%= @song.rank %>">
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create song
  </button>
</form>

<hr>

<a href="/songs">
  Go back
</a>
