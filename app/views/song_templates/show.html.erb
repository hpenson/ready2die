<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Song #<%= @song.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/songs" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link song start -->
      <div class="col">
        <% if current_user == @song.user %>
          <a href="/songs/<%= @song.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit song
          </a>
        <% end %>
      </div>
      <!-- Edit link song end -->

      <!-- Delete link song start -->
      <div class="col">
        <% if current_user == @song.user %>
          <a href="/delete_song/<%= @song.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete song
          </a>
        <% end %>
      </div>
      <!-- Delete link song end -->
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <!-- Display title start -->
      <dd>
        <%= @song.title %>
      </dd>
      <!-- Display title end -->

      <dt>
        Artist
      </dt>
      <!-- Display artist start -->
      <dd>
        <%= @song.artist %>
      </dd>
      <!-- Display artist end -->

      <dt>
        Rank
      </dt>
      <!-- Display rank start -->
      <dd>
        <%= @song.rank %>
      </dd>
      <!-- Display rank end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @song.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@song.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@song.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
