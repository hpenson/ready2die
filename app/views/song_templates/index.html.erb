<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All songs
    </h1>

    <a href="/songs/new" class="btn btn-block btn-outline-secondary">
      Add a new song
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Artist
        </th>

        <th>
          Rank
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @songs.each do |song| %>
      <tr>
        <!-- Display song.id start -->
        <td>
          <%= song.id %>
        </td>
        <!-- Display song.id end -->

        <!-- Display song.title start -->
        <td>
          <%= song.title %>
        </td>
        <!-- Display song.title end -->

        <!-- Display song.artist start -->
        <td>
          <%= song.artist %>
        </td>
        <!-- Display song.artist end -->

        <!-- Display song.rank start -->
        <td>
          <%= song.rank %>
        </td>
        <!-- Display song.rank end -->

        <!-- Display song.user_id start -->
        <td>
          <%= song.user.email %>
        </td>
        <!-- Display song.user_id end -->

        <!-- Display song.created_at start -->
        <td>
          <%= time_ago_in_words(song.created_at) %> ago
        </td>
        <!-- Display song.created_at end -->

        <!-- Display song.updated_at start -->
        <td>
          <%= time_ago_in_words(song.updated_at) %> ago
        </td>
        <!-- Display song.updated_at end -->

        <td>
          <a href="/songs/<%= song.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
