<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All songs
    </h1>

    <a href="/songs/new" class="btn btn-block btn-outline-secondary">
      Add a new song
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "song_templates/songs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Artist
        </th>

        <th>
          Rank
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @songs.each do |song| %>
      <tr>
        <td>
          <%= song.id %>
        </td>

        <td>
          <%= song.title %>
        </td>

        <td>
          <%= song.artist %>
        </td>

        <td>
          <%= song.rank %>
        </td>

        <td>
          <% if song.user.present? %>
            <a href="/users/<%= song.user.id %>">
              <%= song.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(song.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(song.updated_at) %> ago
        </td>

        <td>
          <a href="/songs/<%= song.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @songs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
