<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Video #<%= @video.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/videos" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @video.user %>
          <a href="/videos/<%= @video.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit video
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @video.user %>
          <a href="/delete_video/<%= @video.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete video
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Upload
      </dt>
      <dd>
        <%= @video.upload %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @video.description %>
      </dd>

      <dt>
        Caption
      </dt>
      <dd>
        <%= @video.caption %>
      </dd>

      <dt>
        Rank
      </dt>
      <dd>
        <%= @video.rank %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @video.user.present? %>
          <a href="/users/<%= @video.user_id %>">
            <%= @video.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@video.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@video.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

