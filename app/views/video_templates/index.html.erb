<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All videos
    </h1>

    <a href="/videos/new" class="btn btn-block btn-outline-secondary">
      Add a new video
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Upload
        </th>

        <th>
          Description
        </th>

        <th>
          Caption
        </th>

        <th>
          Rank
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @videos.each do |video| %>
      <tr>
        <!-- Display video.id start -->
        <td>
          <%= video.id %>
        </td>
        <!-- Display video.id end -->

        <!-- Display video.upload start -->
        <td>
          <%= video.upload %>
        </td>
        <!-- Display video.upload end -->

        <!-- Display video.description start -->
        <td>
          <%= video.description %>
        </td>
        <!-- Display video.description end -->

        <!-- Display video.caption start -->
        <td>
          <%= video.caption %>
        </td>
        <!-- Display video.caption end -->

        <!-- Display video.rank start -->
        <td>
          <%= video.rank %>
        </td>
        <!-- Display video.rank end -->

        <!-- Display video.user_id start -->
        <td>
          <% if video.user.present? %>
            <a href="/users/<%= video.user.id %>">
              <%= video.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display video.user_id end -->

        <!-- Display video.created_at start -->
        <td>
          <%= time_ago_in_words(video.created_at) %> ago
        </td>
        <!-- Display video.created_at end -->

        <!-- Display video.updated_at start -->
        <td>
          <%= time_ago_in_words(video.updated_at) %> ago
        </td>
        <!-- Display video.updated_at end -->

        <td>
          <a href="/videos/<%= video.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @videos, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
