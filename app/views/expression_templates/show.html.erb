<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Expression #<%= @expression.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/expressions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link expression start -->
      <div class="col">
        <a href="/expressions/<%= @expression.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit expression
        </a>
      </div>
      <!-- Edit link expression end -->

      <!-- Delete link expression start -->
      <div class="col">
        <a href="/delete_expression/<%= @expression.id %>" class="btn btn-block btn-outline-secondary">
          Delete expression
        </a>
      </div>
      <!-- Delete link expression end -->
    </div>

    <dl>
      <dt>
        Kind
      </dt>
      <!-- Display kind start -->
      <dd>
        <%= @expression.kind %>
      </dd>
      <!-- Display kind end -->

      <dt>
        Description
      </dt>
      <!-- Display description start -->
      <dd>
        <%= @expression.description %>
      </dd>
      <!-- Display description end -->

      <dt>
        Rank
      </dt>
      <!-- Display rank start -->
      <dd>
        <%= @expression.rank %>
      </dd>
      <!-- Display rank end -->

      <dt>
        Service
      </dt>
      <!-- Display service_id start -->
      <dd>
        <%= @expression.service_id %>
      </dd>
      <!-- Display service_id end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @expression.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@expression.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@expression.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

