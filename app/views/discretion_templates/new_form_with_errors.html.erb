<!-- Validation failure messages -->
<% if @discretion.present? %>
  <% if @discretion.errors.any? %>
    <% @discretion.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new discretion
</h1>


<hr>

<!-- Form discretion start -->
<form action="/create_discretion" method="post">
<!-- Form discretion end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <label for="title">
      Title
    </label>

    <!-- Input for title start -->
    <input type="text" id="title" name="title" class="form-control" value="<%= @discretion.title %>">
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @discretion.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for instruction start -->
  <div class="form-group">
    <label for="instruction">
      Instruction
    </label>

    <!-- Input for instruction start -->
    <input type="text" id="instruction" name="instruction" class="form-control" value="<%= @discretion.instruction %>">
    <!-- Input for instruction end -->
  </div>
  <!-- Label and input for instruction end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @discretion.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for apppointee_id start -->
  <div class="form-group">
    <label for="apppointee_id">
      Apppointee
    </label>

    <!-- Input for apppointee_id start -->
    <input type="text" id="apppointee_id" name="apppointee_id" class="form-control" value="<%= @discretion.apppointee_id %>">
    <!-- Input for apppointee_id end -->
  </div>
  <!-- Label and input for apppointee_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create discretion
  </button>
</form>

<hr>

<a href="/discretions">
  Go back
</a>
