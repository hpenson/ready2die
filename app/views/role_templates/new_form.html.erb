<h1>
  Add a new role
</h1>


<hr>

<!-- Form role start -->
<form action="/create_role" method="post">
<!-- Form role end -->

  <!-- Label and input for kind start -->
  <div class="form-group">
    <label for="kind">
      Kind
    </label>

    <!-- Input for kind start -->
    <input type="text" id="kind" name="kind" class="form-control">
    <!-- Input for kind end -->
  </div>
  <!-- Label and input for kind end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for rank start -->
  <div class="form-group">
    <label for="rank">
      Rank
    </label>

    <!-- Input for rank start -->
    <input type="text" id="rank" name="rank" class="form-control">
    <!-- Input for rank end -->
  </div>
  <!-- Label and input for rank end -->

  <!-- Label and input for guest_id start -->
  <div class="form-group">
    <label for="guest_id">
      Guest
    </label>

    <!-- Input for guest_id start -->
    <input type="text" id="guest_id" name="guest_id" class="form-control">
    <!-- Input for guest_id end -->
  </div>
  <!-- Label and input for guest_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create role
  </button>
</form>

<hr>

<a href="/roles">
  Go back
</a>
