<h1>
  Add a new role
</h1>


<hr>

<form action="/create_role" method="post">

  <div class="form-group">
    <label for="kind">
      Kind
    </label>

    <input type="text" id="kind" name="kind" class="form-control">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control">
  </div>

  <div class="form-group">
    <label for="rank">
      Rank
    </label>

    <input type="text" id="rank" name="rank" class="form-control">
  </div>

  <div class="form-group">
    <label for="guest_id">
      Guest
    </label>

    <%= select_tag(:guest_id, options_from_collection_for_select(Guest.all, :id, :first_name, @role.guest_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create role
  </button>
</form>

<hr>

<a href="/roles">
  Go back
</a>
