<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Role #<%= @role.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/roles" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link role start -->
      <div class="col">
        <a href="/roles/<%= @role.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit role
        </a>
      </div>
      <!-- Edit link role end -->

      <!-- Delete link role start -->
      <div class="col">
        <a href="/delete_role/<%= @role.id %>" class="btn btn-block btn-outline-secondary">
          Delete role
        </a>
      </div>
      <!-- Delete link role end -->
    </div>

    <dl>
      <dt>
        Kind
      </dt>
      <!-- Display kind start -->
      <dd>
        <%= @role.kind %>
      </dd>
      <!-- Display kind end -->

      <dt>
        Description
      </dt>
      <!-- Display description start -->
      <dd>
        <%= @role.description %>
      </dd>
      <!-- Display description end -->

      <dt>
        Rank
      </dt>
      <!-- Display rank start -->
      <dd>
        <%= @role.rank %>
      </dd>
      <!-- Display rank end -->

      <dt>
        Guest
      </dt>
      <!-- Display guest_id start -->
      <dd>
        <%= @role.guest_id %>
      </dd>
      <!-- Display guest_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@role.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@role.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

