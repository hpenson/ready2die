<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All roles
    </h1>

    <a href="/roles/new" class="btn btn-block btn-outline-secondary">
      Add a new role
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "role_templates/roles_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Kind
        </th>

        <th>
          Description
        </th>

        <th>
          Rank
        </th>

        <th>
          Guest
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @roles.each do |role| %>
      <tr>
        <td>
          <%= role.id %>
        </td>

        <td>
          <%= role.kind %>
        </td>

        <td>
          <%= role.description %>
        </td>

        <td>
          <%= role.rank %>
        </td>

        <td>
          <% if role.guest.present? %>
            <a href="/guests/<%= role.guest.id %>">
              <%= role.guest.first_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(role.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(role.updated_at) %> ago
        </td>

        <td>
          <a href="/roles/<%= role.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @roles, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
