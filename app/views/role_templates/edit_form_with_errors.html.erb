<% if @role.errors.any? %>
  <% @role.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit role #<%= @role.id %>
</h1>

<hr>

<form action="/update_role/<%= @role.id %>" method="post">

  <div class="form-group">
    <label for="kind">
      Kind
    </label>

    <input type="text" id="kind" name="kind" class="form-control" value="<%= @role.kind %>">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @role.description %>">
  </div>

  <div class="form-group">
    <label for="rank">
      Rank
    </label>

    <input type="text" id="rank" name="rank" class="form-control" value="<%= @role.rank %>">
  </div>

  <div class="form-group">
    <label for="guest_id">
      Guest
    </label>

    <%= select_tag(:guest_id, options_from_collection_for_select(Guest.all, :id, :first_name, @role.guest_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update role
  </button>
</form>

<hr>

<a href="/roles">
  Go back
</a>
