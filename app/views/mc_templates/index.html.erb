<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All mcs
    </h1>

    <a href="/mcs/new" class="btn btn-block btn-outline-secondary">
      Add a new mc
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "mc_templates/mcs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Rank
        </th>

        <th>
          Guest
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @mcs.each do |mc| %>
      <tr>
        <td>
          <%= mc.id %>
        </td>

        <td>
          <%= mc.rank %>
        </td>

        <td>
          <% if mc.guest.present? %>
            <a href="/guests/<%= mc.guest.id %>">
              <%= mc.guest.first_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(mc.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(mc.updated_at) %> ago
        </td>

        <td>
          <a href="/mcs/<%= mc.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @mcs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
