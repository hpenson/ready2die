<form action="/create_service_from_theme" method="post">

  <div class="form-group">
    <label for="venue_id">
      Venue
    </label>

    <%= select_tag(:venue_id, options_from_collection_for_select(Venue.all, :id, :name, @service.venue_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <input type="hidden" name="theme_id" value="<%= @theme.id %>">

  <div class="form-group">
    <label for="rank">
      Rank
    </label>

    <input type="text" id="rank" name="rank" class="form-control" value="<%= @service.rank %>">
  </div>

  <div class="form-group">
    <label for="casket">
      Casket
    </label>

    <input type="text" id="casket" name="casket" class="form-control" value="<%= @service.casket %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create service
  </button>
</form>
