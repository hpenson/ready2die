<!-- Validation failure messages -->
<% if @theme.errors.any? %>
  <% @theme.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit theme #<%= @theme.id %>
</h1>

<hr>

<!-- Form theme start -->
<form action="/update_theme/<%= @theme.id %>" method="post">
<!-- Form theme end -->

  <!-- Label and input for rank start -->
  <div class="form-group">
    <label for="rank">
      Rank
    </label>

    <!-- Input for rank start -->
    <input type="text" id="rank" name="rank" class="form-control" value="<%= @theme.rank %>">
    <!-- Input for rank end -->
  </div>
  <!-- Label and input for rank end -->

  <button class="btn btn-block btn-outline-secondary">
    Update theme
  </button>
</form>

<hr>

<a href="/themes">
  Go back
</a>
