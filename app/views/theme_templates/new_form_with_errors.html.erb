<% if @theme.present? %>
  <% if @theme.errors.any? %>
    <% @theme.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new theme
</h1>


<hr>

<form action="/create_theme" method="post">

  <div class="form-group">
    <label for="rank">
      Rank
    </label>

    <input type="text" id="rank" name="rank" class="form-control" value="<%= @theme.rank %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create theme
  </button>
</form>

<hr>

<a href="/themes">
  Go back
</a>
