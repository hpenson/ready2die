<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All themes
    </h1>

    <a href="/themes/new" class="btn btn-block btn-outline-secondary">
      Add a new theme
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "theme_templates/themes_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Rank
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @themes.each do |theme| %>
      <tr>
        <td>
          <%= theme.id %>
        </td>

        <td>
          <%= theme.rank %>
        </td>

        <td>
          <%= time_ago_in_words(theme.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(theme.updated_at) %> ago
        </td>

        <td>
          <a href="/themes/<%= theme.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @themes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
