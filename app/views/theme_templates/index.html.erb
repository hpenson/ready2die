<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All themes
    </h1>

    <a href="/themes/new" class="btn btn-block btn-outline-secondary">
      Add a new theme
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Rank
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @themes.each do |theme| %>
      <tr>
        <!-- Display theme.id start -->
        <td>
          <%= theme.id %>
        </td>
        <!-- Display theme.id end -->

        <!-- Display theme.rank start -->
        <td>
          <%= theme.rank %>
        </td>
        <!-- Display theme.rank end -->

        <!-- Display theme.created_at start -->
        <td>
          <%= time_ago_in_words(theme.created_at) %> ago
        </td>
        <!-- Display theme.created_at end -->

        <!-- Display theme.updated_at start -->
        <td>
          <%= time_ago_in_words(theme.updated_at) %> ago
        </td>
        <!-- Display theme.updated_at end -->

        <td>
          <a href="/themes/<%= theme.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @themes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
