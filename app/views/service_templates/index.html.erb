<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All services
    </h1>

    <a href="/services/new" class="btn btn-block btn-outline-secondary">
      Add a new service
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "service_templates/services_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Venue
        </th>

        <th>
          User
        </th>

        <th>
          Theme
        </th>

        <th>
          Rank
        </th>

        <th>
          Casket
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @services.each do |service| %>
      <tr>
        <td>
          <%= service.id %>
        </td>

        <td>
          <% if service.venue.present? %>
            <a href="/venues/<%= service.venue.id %>">
              <%= service.venue.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if service.user.present? %>
            <a href="/users/<%= service.user.id %>">
              <%= service.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if service.theme.present? %>
            <a href="/themes/<%= service.theme.id %>">
              <%= service.theme.rank %>
            </a>
          <% end %>
        </td>

        <td>
          <%= service.rank %>
        </td>

        <td>
          <%= service.casket %>
        </td>

        <td>
          <%= time_ago_in_words(service.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(service.updated_at) %> ago
        </td>

        <td>
          <a href="/services/<%= service.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @services, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
