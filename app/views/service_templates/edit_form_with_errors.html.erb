<% if @service.errors.any? %>
  <% @service.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit service #<%= @service.id %>
</h1>

<hr>

<form action="/update_service/<%= @service.id %>" method="post">

  <div class="form-group">
    <label for="venue_id">
      Venue
    </label>

    <%= select_tag(:venue_id, options_from_collection_for_select(Venue.all, :id, :name, @service.venue_id), :class => "form-control") %>
  </div>


  <div class="form-group">
    <label for="theme_id">
      Theme
    </label>

    <%= select_tag(:theme_id, options_from_collection_for_select(Theme.all, :id, :rank, @service.theme_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="rank">
      Rank
    </label>

    <input type="text" id="rank" name="rank" class="form-control" value="<%= @service.rank %>">
  </div>

  <div class="form-group">
    <label for="casket">
      Casket
    </label>

    <input type="text" id="casket" name="casket" class="form-control" value="<%= @service.casket %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update service
  </button>
</form>

<hr>

<a href="/services">
  Go back
</a>
