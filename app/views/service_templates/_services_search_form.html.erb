<%= search_form_for @q, :class => collapse_search_form, :id => "services_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :casket_cont, "Casket contains" %>
    <%= f.text_field :casket_cont, :class => "form-control", :placeholder => "Casket contains" %>
  </div>

  <div class="form-group">
    <%= f.label :rank, "Rank" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :rank_gteq, :class => "form-control", :placeholder => "Rank greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :rank_lteq, :class => "form-control", :placeholder => "Rank less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :venue_name_cont, "Venue name contains" %>
    <%= f.text_field :venue_name_cont, :class => "form-control", :placeholder => "Venue name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :rank, "Theme Rank" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :theme_rank_gteq, :class => "form-control", :placeholder => "Theme Rank greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :theme_rank_lteq, :class => "form-control", :placeholder => "Theme Rank less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :rank, "Mc Rank" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :mc_rank_gteq, :class => "form-control", :placeholder => "Mc Rank greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :mc_rank_lteq, :class => "form-control", :placeholder => "Mc Rank less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :playlist_title_cont, "Song title contains" %>
    <%= f.text_field :playlist_title_cont, :class => "form-control", :placeholder => "Song title contains" %>
  </div>

  <div class="form-group">
    <%= f.label :video_playlist_upload_cont, "Video upload contains" %>
    <%= f.text_field :video_playlist_upload_cont, :class => "form-control", :placeholder => "Video upload contains" %>
  </div>

  <div class="form-group">
    <%= f.label :expression_arrangement_kind_cont, "Expression kind contains" %>
    <%= f.text_field :expression_arrangement_kind_cont, :class => "form-control", :placeholder => "Expression kind contains" %>
  </div>

  <div class="form-group">
    <%= f.label :guest_list_first_name_cont, "Guest first_name contains" %>
    <%= f.text_field :guest_list_first_name_cont, :class => "form-control", :placeholder => "Guest first_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/services" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#services_filters">
  Show filters
</a>
