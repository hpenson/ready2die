<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All speakers
    </h1>

    <a href="/speakers/new" class="btn btn-block btn-outline-secondary">
      Add a new speaker
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "speaker_templates/speakers_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Rank
        </th>

        <th>
          Guest
        </th>

        <th>
          Position
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @speakers.each do |speaker| %>
      <tr>
        <td>
          <%= speaker.id %>
        </td>

        <td>
          <%= speaker.rank %>
        </td>

        <td>
          <% if speaker.guest.present? %>
            <a href="/guests/<%= speaker.guest.id %>">
              <%= speaker.guest.first_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= speaker.position %>
        </td>

        <td>
          <%= speaker.description %>
        </td>

        <td>
          <%= time_ago_in_words(speaker.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(speaker.updated_at) %> ago
        </td>

        <td>
          <a href="/speakers/<%= speaker.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @speakers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
