<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Speaker #<%= @speaker.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/speakers" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/speakers/<%= @speaker.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit speaker
        </a>
      </div>

      <div class="col">
        <a href="/delete_speaker/<%= @speaker.id %>" class="btn btn-block btn-outline-secondary">
          Delete speaker
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Rank
      </dt>
      <dd>
        <%= @speaker.rank %>
      </dd>

      <dt>
        Guest
      </dt>
      <dd>
        <% if @speaker.guest.present? %>
          <a href="/guests/<%= @speaker.guest_id %>">
            <%= @speaker.guest.first_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Position
      </dt>
      <dd>
        <%= @speaker.position %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @speaker.description %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@speaker.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@speaker.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

