<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Speaker #<%= @speaker.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/speakers" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link speaker start -->
      <div class="col">
        <a href="/speakers/<%= @speaker.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit speaker
        </a>
      </div>
      <!-- Edit link speaker end -->

      <!-- Delete link speaker start -->
      <div class="col">
        <a href="/delete_speaker/<%= @speaker.id %>" class="btn btn-block btn-outline-secondary">
          Delete speaker
        </a>
      </div>
      <!-- Delete link speaker end -->
    </div>

    <dl>
      <dt>
        Rank
      </dt>
      <!-- Display rank start -->
      <dd>
        <%= @speaker.rank %>
      </dd>
      <!-- Display rank end -->

      <dt>
        Guest
      </dt>
      <!-- Display guest_id start -->
      <dd>
        <%= @speaker.guest_id %>
      </dd>
      <!-- Display guest_id end -->

      <dt>
        Position
      </dt>
      <!-- Display position start -->
      <dd>
        <%= @speaker.position %>
      </dd>
      <!-- Display position end -->

      <dt>
        Description
      </dt>
      <!-- Display description start -->
      <dd>
        <%= @speaker.description %>
      </dd>
      <!-- Display description end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@speaker.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@speaker.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

