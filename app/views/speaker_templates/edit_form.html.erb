<h1>
  Edit speaker #<%= @speaker.id %>
</h1>

<hr>

<!-- Form speaker start -->
<form action="/update_speaker/<%= @speaker.id %>" method="post">
<!-- Form speaker end -->

  <!-- Label and input for rank start -->
  <div class="form-group">
    <label for="rank">
      Rank
    </label>

    <!-- Input for rank start -->
    <input type="text" id="rank" name="rank" class="form-control" value="<%= @speaker.rank %>">
    <!-- Input for rank end -->
  </div>
  <!-- Label and input for rank end -->

  <!-- Label and input for guest_id start -->
  <div class="form-group">
    <label for="guest_id">
      Guest
    </label>

    <!-- Input for guest_id start -->
    <input type="text" id="guest_id" name="guest_id" class="form-control" value="<%= @speaker.guest_id %>">
    <!-- Input for guest_id end -->
  </div>
  <!-- Label and input for guest_id end -->

  <!-- Label and input for position start -->
  <div class="form-group">
    <label for="position">
      Position
    </label>

    <!-- Input for position start -->
    <input type="text" id="position" name="position" class="form-control" value="<%= @speaker.position %>">
    <!-- Input for position end -->
  </div>
  <!-- Label and input for position end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @speaker.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <button class="btn btn-block btn-outline-secondary">
    Update speaker
  </button>
</form>

<hr>

<a href="/speakers">
  Go back
</a>
