<h1>
  Add a new speaker
</h1>


<hr>

<form action="/create_speaker" method="post">

  <div class="form-group">
    <label for="rank">
      Rank
    </label>

    <input type="text" id="rank" name="rank" class="form-control">
  </div>

  <div class="form-group">
    <label for="guest_id">
      Guest
    </label>

    <%= select_tag(:guest_id, options_from_collection_for_select(Guest.all, :id, :first_name, @speaker.guest_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="position">
      Position
    </label>

    <input type="text" id="position" name="position" class="form-control">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create speaker
  </button>
</form>

<hr>

<a href="/speakers">
  Go back
</a>
