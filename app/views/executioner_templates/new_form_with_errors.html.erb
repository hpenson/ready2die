<% if @executioner.present? %>
  <% if @executioner.errors.any? %>
    <% @executioner.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new executioner
</h1>


<hr>

<form action="/create_executioner" method="post">

  <div class="form-group">
    <label for="last_name">
      Last name
    </label>

    <input type="text" id="last_name" name="last_name" class="form-control" value="<%= @executioner.last_name %>">
  </div>

  <div class="form-group">
    <label for="first_name">
      First name
    </label>

    <input type="text" id="first_name" name="first_name" class="form-control" value="<%= @executioner.first_name %>">
  </div>

  <div class="form-group">
    <label for="address">
      Address
    </label>

    <input type="text" id="address" name="address" class="form-control" value="<%= @executioner.address %>">
  </div>

  <div class="form-group">
    <label for="email">
      Email
    </label>

    <input type="text" id="email" name="email" class="form-control" value="<%= @executioner.email %>">
  </div>

  <div class="form-group">
    <label for="phone">
      Phone
    </label>

    <input type="text" id="phone" name="phone" class="form-control" value="<%= @executioner.phone %>">
  </div>

  <div class="form-group">
    <label for="instruction">
      Instruction
    </label>

    <input type="text" id="instruction" name="instruction" class="form-control" value="<%= @executioner.instruction %>">
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create executioner
  </button>
</form>

<hr>

<a href="/executioners">
  Go back
</a>
