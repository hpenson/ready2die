<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All executioners
    </h1>

    <a href="/executioners/new" class="btn btn-block btn-outline-secondary">
      Add a new executioner
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "executioner_templates/executioners_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "executioner_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Last name
        </th>

        <th>
          First name
        </th>

        <th>
          Address
        </th>

        <th>
          Email
        </th>

        <th>
          Phone
        </th>

        <th>
          Instruction
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @executioners.each do |executioner| %>
      <tr>
        <td>
          <%= executioner.id %>
        </td>

        <td>
          <%= executioner.last_name %>
        </td>

        <td>
          <%= executioner.first_name %>
        </td>

        <td>
          <%= executioner.address %>
        </td>

        <td>
          <%= executioner.email %>
        </td>

        <td>
          <%= executioner.phone %>
        </td>

        <td>
          <%= executioner.instruction %>
        </td>

        <td>
          <% if executioner.user.present? %>
            <a href="/users/<%= executioner.user.id %>">
              <%= executioner.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(executioner.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(executioner.updated_at) %> ago
        </td>

        <td>
          <a href="/executioners/<%= executioner.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @executioners, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
