<h1>
  Add a new obituary
</h1>


<hr>

<!-- Form obituary start -->
<form action="/create_obituary" method="post">
<!-- Form obituary end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for outlet start -->
  <div class="form-group">
    <label for="outlet">
      Outlet
    </label>

    <!-- Input for outlet start -->
    <input type="text" id="outlet" name="outlet" class="form-control">
    <!-- Input for outlet end -->
  </div>
  <!-- Label and input for outlet end -->

  <!-- Label and input for user_id start -->
  <!-- Input for "user_id" start -->
  <input type="hidden" name="user_id" value="<%= current_user.id %>">
  <!-- Input for "user_id" end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for rank start -->
  <div class="form-group">
    <label for="rank">
      Rank
    </label>

    <!-- Input for rank start -->
    <input type="text" id="rank" name="rank" class="form-control">
    <!-- Input for rank end -->
  </div>
  <!-- Label and input for rank end -->

  <button class="btn btn-block btn-outline-secondary">
    Create obituary
  </button>
</form>

<hr>

<a href="/obituaries">
  Go back
</a>
