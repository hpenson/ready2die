<% if @obituary.present? %>
  <% if @obituary.errors.any? %>
    <% @obituary.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new obituary
</h1>


<hr>

<form action="/create_obituary" method="post">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @obituary.description %>">
  </div>

  <div class="form-group">
    <label for="outlet">
      Outlet
    </label>

    <input type="text" id="outlet" name="outlet" class="form-control" value="<%= @obituary.outlet %>">
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="rank">
      Rank
    </label>

    <input type="text" id="rank" name="rank" class="form-control" value="<%= @obituary.rank %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create obituary
  </button>
</form>

<hr>

<a href="/obituaries">
  Go back
</a>
