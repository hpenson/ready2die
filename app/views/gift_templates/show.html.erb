<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Gift #<%= @gift.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/gifts" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @gift.user %>
          <a href="/gifts/<%= @gift.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit gift
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @gift.user %>
          <a href="/delete_gift/<%= @gift.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete gift
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Receipient
      </dt>
      <dd>
        <%= @gift.receipient %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <div>
          <%= render partial: "gift_templates/one_photo_map" %>
        </div>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @gift.email %>
      </dd>

      <dt>
        Kind
      </dt>
      <dd>
        <%= @gift.kind %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @gift.user.present? %>
          <a href="/users/<%= @gift.user_id %>">
            <%= @gift.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@gift.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@gift.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

