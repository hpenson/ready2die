<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Gift #<%= @gift.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/gifts" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link gift start -->
      <div class="col">
        <% if current_user == @gift.user %>
          <a href="/gifts/<%= @gift.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit gift
          </a>
        <% end %>
      </div>
      <!-- Edit link gift end -->

      <!-- Delete link gift start -->
      <div class="col">
        <% if current_user == @gift.user %>
          <a href="/delete_gift/<%= @gift.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete gift
          </a>
        <% end %>
      </div>
      <!-- Delete link gift end -->
    </div>

    <dl>
      <dt>
        Receipient
      </dt>
      <!-- Display receipient start -->
      <dd>
        <%= @gift.receipient %>
      </dd>
      <!-- Display receipient end -->

      <dt>
        Address
      </dt>
      <!-- Display address start -->
      <dd>
        <div>
          <%= render partial: "gift_templates/one_photo_map" %>
        </div>
      </dd>
      <!-- Display address end -->

      <dt>
        Email
      </dt>
      <!-- Display email start -->
      <dd>
        <%= @gift.email %>
      </dd>
      <!-- Display email end -->

      <dt>
        Kind
      </dt>
      <!-- Display kind start -->
      <dd>
        <%= @gift.kind %>
      </dd>
      <!-- Display kind end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <% if @gift.user.present? %>
          <a href="/users/<%= @gift.user_id %>">
            <%= @gift.user.email %>
          </a>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@gift.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@gift.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
