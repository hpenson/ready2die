<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All gifts
    </h1>

    <a href="/gifts/new" class="btn btn-block btn-outline-secondary">
      Add a new gift
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "gift_templates/gifts_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "gift_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Receipient
        </th>

        <th>
          Address
        </th>

        <th>
          Email
        </th>

        <th>
          Kind
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @gifts.each do |gift| %>
      <tr>
        <td>
          <%= gift.id %>
        </td>

        <td>
          <%= gift.receipient %>
        </td>

        <td>
          <%= gift.address %>
        </td>

        <td>
          <%= gift.email %>
        </td>

        <td>
          <%= gift.kind %>
        </td>

        <td>
          <% if gift.user.present? %>
            <a href="/users/<%= gift.user.id %>">
              <%= gift.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(gift.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(gift.updated_at) %> ago
        </td>

        <td>
          <a href="/gifts/<%= gift.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @gifts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
