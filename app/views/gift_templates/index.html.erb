<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All gifts
    </h1>

    <a href="/gifts/new" class="btn btn-block btn-outline-secondary">
      Add a new gift
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->
<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "gift_templates/all_photos_map" %>
  </div>
</div>
<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Receipient
        </th>

        <th>
          Address
        </th>

        <th>
          Email
        </th>

        <th>
          Kind
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @gifts.each do |gift| %>
      <tr>
        <!-- Display gift.id start -->
        <td>
          <%= gift.id %>
        </td>
        <!-- Display gift.id end -->

        <!-- Display gift.receipient start -->
        <td>
          <%= gift.receipient %>
        </td>
        <!-- Display gift.receipient end -->

        <!-- Display gift.address start -->
        <td>
          <%= gift.address %>
        </td>
        <!-- Display gift.address end -->

        <!-- Display gift.email start -->
        <td>
          <%= gift.email %>
        </td>
        <!-- Display gift.email end -->

        <!-- Display gift.kind start -->
        <td>
          <%= gift.kind %>
        </td>
        <!-- Display gift.kind end -->

        <!-- Display gift.user_id start -->
        <td>
          <%= gift.user.email %>
        </td>
        <!-- Display gift.user_id end -->

        <!-- Display gift.created_at start -->
        <td>
          <%= time_ago_in_words(gift.created_at) %> ago
        </td>
        <!-- Display gift.created_at end -->

        <!-- Display gift.updated_at start -->
        <td>
          <%= time_ago_in_words(gift.updated_at) %> ago
        </td>
        <!-- Display gift.updated_at end -->

        <td>
          <a href="/gifts/<%= gift.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
