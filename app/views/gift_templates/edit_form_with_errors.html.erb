<!-- Validation failure messages -->
<% if @gift.errors.any? %>
  <% @gift.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit gift #<%= @gift.id %>
</h1>

<hr>

<!-- Form gift start -->
<form action="/update_gift/<%= @gift.id %>" method="post">
<!-- Form gift end -->

  <!-- Label and input for receipient start -->
  <div class="form-group">
    <label for="receipient">
      Receipient
    </label>

    <!-- Input for receipient start -->
    <input type="text" id="receipient" name="receipient" class="form-control" value="<%= @gift.receipient %>">
    <!-- Input for receipient end -->
  </div>
  <!-- Label and input for receipient end -->

  <!-- Label and input for address start -->
  <div class="form-group">
    <label for="address">
      Address
    </label>

    <!-- Input for address start -->
    <input type="text" id="address" name="address" class="form-control" value="<%= @gift.address %>">
    <!-- Input for address end -->
  </div>
  <!-- Label and input for address end -->

  <!-- Label and input for email start -->
  <div class="form-group">
    <label for="email">
      Email
    </label>

    <!-- Input for email start -->
    <input type="text" id="email" name="email" class="form-control" value="<%= @gift.email %>">
    <!-- Input for email end -->
  </div>
  <!-- Label and input for email end -->

  <!-- Label and input for kind start -->
  <div class="form-group">
    <label for="kind">
      Kind
    </label>

    <!-- Input for kind start -->
    <input type="text" id="kind" name="kind" class="form-control" value="<%= @gift.kind %>">
    <!-- Input for kind end -->
  </div>
  <!-- Label and input for kind end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @gift.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update gift
  </button>
</form>

<hr>

<a href="/gifts">
  Go back
</a>
