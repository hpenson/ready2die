<% if @connection.errors.any? %>
  <% @connection.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit connection #<%= @connection.id %>
</h1>

<hr>

<form action="/update_connection/<%= @connection.id %>" method="post">

  <div class="form-group">
    <label for="why">
      Why
    </label>

    <input type="text" id="why" name="why" class="form-control" value="<%= @connection.why %>">
  </div>

  <div class="form-group">
    <label for="afriend_id">
      Afriend
    </label>

    <%= select_tag(:afriend_id, options_from_collection_for_select(Friend.all, :id, :first_name, @connection.afriend_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="bfriend_id">
      Bfriend
    </label>

    <%= select_tag(:bfriend_id, options_from_collection_for_select(Friend.all, :id, :first_name, @connection.bfriend_id), :class => "form-control") %>
  </div>


  <button class="btn btn-block btn-outline-secondary">
    Update connection
  </button>
</form>

<hr>

<a href="/connections">
  Go back
</a>
