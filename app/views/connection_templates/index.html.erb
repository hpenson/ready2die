<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All connections
    </h1>

    <a href="/connections/new" class="btn btn-block btn-outline-secondary">
      Add a new connection
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Why
        </th>

        <th>
          Afriend
        </th>

        <th>
          Bfriend
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @connections.each do |connection| %>
      <tr>
        <!-- Display connection.id start -->
        <td>
          <%= connection.id %>
        </td>
        <!-- Display connection.id end -->

        <!-- Display connection.why start -->
        <td>
          <%= connection.why %>
        </td>
        <!-- Display connection.why end -->

        <!-- Display connection.afriend_id start -->
        <td>
          <%= connection.afriend.first_name %>
        </td>
        <!-- Display connection.afriend_id end -->

        <!-- Display connection.bfriend_id start -->
        <td>
          <%= connection.bfriend.first_name %>
        </td>
        <!-- Display connection.bfriend_id end -->

        <!-- Display connection.user_id start -->
        <td>
          <%= connection.user.email %>
        </td>
        <!-- Display connection.user_id end -->

        <!-- Display connection.created_at start -->
        <td>
          <%= time_ago_in_words(connection.created_at) %> ago
        </td>
        <!-- Display connection.created_at end -->

        <!-- Display connection.updated_at start -->
        <td>
          <%= time_ago_in_words(connection.updated_at) %> ago
        </td>
        <!-- Display connection.updated_at end -->

        <td>
          <a href="/connections/<%= connection.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
