<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Expressions

    <a data-toggle="collapse" href="#user_expressions_new_form">
      Add expression
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.expressions.each do |expression| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/expressions/<%= expression.id %>">
          <%= expression.kind %>
        </a>

      </li>
    <% end %>

  </ul>
</div>
