<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All remains
    </h1>

    <a href="/remains/new" class="btn btn-block btn-outline-secondary">
      Add a new remain
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "remain_templates/remains_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Portion
        </th>

        <th>
          Wish
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @remains.each do |remain| %>
      <tr>
        <td>
          <%= remain.id %>
        </td>

        <td>
          <%= remain.portion %>
        </td>

        <td>
          <%= remain.wish %>
        </td>

        <td>
          <% if remain.user.present? %>
            <a href="/users/<%= remain.user.id %>">
              <%= remain.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(remain.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(remain.updated_at) %> ago
        </td>

        <td>
          <a href="/remains/<%= remain.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @remains, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
