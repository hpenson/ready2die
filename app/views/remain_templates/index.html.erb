<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All remains
    </h1>

    <a href="/remains/new" class="btn btn-block btn-outline-secondary">
      Add a new remain
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Portion
        </th>

        <th>
          Wish
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @remains.each do |remain| %>
      <tr>
        <!-- Display remain.id start -->
        <td>
          <%= remain.id %>
        </td>
        <!-- Display remain.id end -->

        <!-- Display remain.portion start -->
        <td>
          <%= remain.portion %>
        </td>
        <!-- Display remain.portion end -->

        <!-- Display remain.wish start -->
        <td>
          <%= remain.wish %>
        </td>
        <!-- Display remain.wish end -->

        <!-- Display remain.user_id start -->
        <td>
          <%= remain.user.email %>
        </td>
        <!-- Display remain.user_id end -->

        <!-- Display remain.created_at start -->
        <td>
          <%= time_ago_in_words(remain.created_at) %> ago
        </td>
        <!-- Display remain.created_at end -->

        <!-- Display remain.updated_at start -->
        <td>
          <%= time_ago_in_words(remain.updated_at) %> ago
        </td>
        <!-- Display remain.updated_at end -->

        <td>
          <a href="/remains/<%= remain.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @remains, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
