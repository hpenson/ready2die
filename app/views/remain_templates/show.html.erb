<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Remain #<%= @remain.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/remains" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link remain start -->
      <div class="col">
        <% if current_user == @remain.user %>
          <a href="/remains/<%= @remain.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit remain
          </a>
        <% end %>
      </div>
      <!-- Edit link remain end -->

      <!-- Delete link remain start -->
      <div class="col">
        <% if current_user == @remain.user %>
          <a href="/delete_remain/<%= @remain.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete remain
          </a>
        <% end %>
      </div>
      <!-- Delete link remain end -->
    </div>

    <dl>
      <dt>
        Portion
      </dt>
      <!-- Display portion start -->
      <dd>
        <%= @remain.portion %>
      </dd>
      <!-- Display portion end -->

      <dt>
        Wish
      </dt>
      <!-- Display wish start -->
      <dd>
        <%= @remain.wish %>
      </dd>
      <!-- Display wish end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <%= @remain.user_id %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@remain.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@remain.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
