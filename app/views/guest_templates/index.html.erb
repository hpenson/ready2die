<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All guests
    </h1>

    <a href="/guests/new" class="btn btn-block btn-outline-secondary">
      Add a new guest
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "guest_templates/guests_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "guest_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Address
        </th>

        <th>
          Email
        </th>

        <th>
          Phone
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @guests.each do |guest| %>
      <tr>
        <td>
          <%= guest.id %>
        </td>

        <td>
          <%= guest.first_name %>
        </td>

        <td>
          <%= guest.last_name %>
        </td>

        <td>
          <%= guest.address %>
        </td>

        <td>
          <%= guest.email %>
        </td>

        <td>
          <%= guest.phone %>
        </td>

        <td>
          <% if guest.user.present? %>
            <a href="/users/<%= guest.user.id %>">
              <%= guest.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(guest.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(guest.updated_at) %> ago
        </td>

        <td>
          <a href="/guests/<%= guest.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @guests, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
