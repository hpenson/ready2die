<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All messages
    </h1>

    <a href="/messages/new" class="btn btn-block btn-outline-secondary">
      Add a new message
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->
<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "message_templates/all_photos_map" %>
  </div>
</div>
<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Receipient
        </th>

        <th>
          Address
        </th>

        <th>
          Email
        </th>

        <th>
          Phone
        </th>

        <th>
          Content
        </th>

        <th>
          Audio
        </th>

        <th>
          Video
        </th>

        <th>
          User
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @messages.each do |message| %>
      <tr>
        <!-- Display message.id start -->
        <td>
          <%= message.id %>
        </td>
        <!-- Display message.id end -->

        <!-- Display message.description start -->
        <td>
          <%= message.description %>
        </td>
        <!-- Display message.description end -->

        <!-- Display message.receipient start -->
        <td>
          <%= message.receipient %>
        </td>
        <!-- Display message.receipient end -->

        <!-- Display message.address start -->
        <td>
          <%= message.address %>
        </td>
        <!-- Display message.address end -->

        <!-- Display message.email start -->
        <td>
          <%= message.email %>
        </td>
        <!-- Display message.email end -->

        <!-- Display message.phone start -->
        <td>
          <%= message.phone %>
        </td>
        <!-- Display message.phone end -->

        <!-- Display message.content start -->
        <td>
          <%= message.content %>
        </td>
        <!-- Display message.content end -->

        <!-- Display message.audio start -->
        <td>
          <%= message.audio %>
        </td>
        <!-- Display message.audio end -->

        <!-- Display message.video start -->
        <td>
          <%= message.video %>
        </td>
        <!-- Display message.video end -->

        <!-- Display message.user_id start -->
        <td>
          <%= message.user.email %>
        </td>
        <!-- Display message.user_id end -->

        <!-- Display message.photo start -->
        <td>
          <img src='<%= message.photo %>' class='img-fluid'>
        </td>
        <!-- Display message.photo end -->

        <!-- Display message.created_at start -->
        <td>
          <%= time_ago_in_words(message.created_at) %> ago
        </td>
        <!-- Display message.created_at end -->

        <!-- Display message.updated_at start -->
        <td>
          <%= time_ago_in_words(message.updated_at) %> ago
        </td>
        <!-- Display message.updated_at end -->

        <td>
          <a href="/messages/<%= message.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @messages, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
