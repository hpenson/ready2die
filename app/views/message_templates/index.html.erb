<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All messages
    </h1>

    <a href="/messages/new" class="btn btn-block btn-outline-secondary">
      Add a new message
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "message_templates/messages_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "message_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Receipient
        </th>

        <th>
          Address
        </th>

        <th>
          Email
        </th>

        <th>
          Phone
        </th>

        <th>
          Content
        </th>

        <th>
          Audio
        </th>

        <th>
          Video
        </th>

        <th>
          User
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @messages.each do |message| %>
      <tr>
        <td>
          <%= message.id %>
        </td>

        <td>
          <%= message.description %>
        </td>

        <td>
          <%= message.receipient %>
        </td>

        <td>
          <%= message.address %>
        </td>

        <td>
          <%= message.email %>
        </td>

        <td>
          <%= message.phone %>
        </td>

        <td>
          <%= message.content %>
        </td>

        <td>
          <%= message.audio %>
        </td>

        <td>
          <%= message.video %>
        </td>

        <td>
          <% if message.user.present? %>
            <a href="/users/<%= message.user.id %>">
              <%= message.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <img src='<%= message.photo %>' class='img-fluid'>
        </td>

        <td>
          <%= time_ago_in_words(message.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(message.updated_at) %> ago
        </td>

        <td>
          <a href="/messages/<%= message.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @messages, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
